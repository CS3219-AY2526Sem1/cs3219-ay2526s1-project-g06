# Question Service Environment Variables
# Copy this file to .env and fill in the actual values

# === REQUIRED ===

# MongoDB connection string for questions data
# NOTE: Use a different database name than user service (e.g., peerprep-questions)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/peerprep-questions?retryWrites=true&w=majority

# === OPTIONAL ===

# CORS origin - URL of your frontend
# Local development: http://localhost:5173
# Production: https://your-cloudfront-domain.cloudfront.net
# Defaults to http://localhost:5173 if not set
CORS_ORIGIN=http://localhost:5173

# Port number for question service
# Defaults to 4003 if not set
PORT=4003

# Node environment (set automatically by docker-compose)
# NODE_ENV=production
